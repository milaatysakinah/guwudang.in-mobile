<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guwudangin">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_guwudang"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_guwudang_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modul.login.LoginActivity"/>
        <activity android:name=".modul.productdetail.ProductDetailActivity" />
        <activity android:name=".modul.qrscanner.QRScannerActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>